{
    "global_settings": {
        "description": "全局设置",
        "type": "object",
        "items": {
            "default_openlist_url": {
                "description": "默认Openlist服务器地址",
                "type": "string",
                "default": "",
                "hint": "http://localhost:5244"
            },
            "public_openlist_url": {
                "description": "Openlist公网服务地址 (可选)",
                "type": "string",
                "default": "",
                "hint": "当默认地址是内网地址时，可用于构建公网下载链接"
            },
            "default_username": {
                "description": "默认用户名",
                "type": "string",
                "default": "",
                "hint": "留空表示匿名访问"
            },
            "default_password": {
                "description": "默认密码",
                "type": "string",
                "default": "",
                "hint": "用户名为空时可忽略"
            },
            "default_token": {
                "description": "默认访问Token",
                "type": "string",
                "default": "",
                "hint": "可选，优先级高于用户名密码"
            },
            "fixed_base_directory": {
                "description": "下载链接前缀路径 (可选，需使用获取下载链接指令时必填)",
                "type": "string",
                "default": "",
                "hint": "例如: /夸克 (留空则不添加前缀)"
            },
            "max_display_files": {
                "description": "最大显示文件数",
                "type": "int",
                "default": 20,
                "slider": {
                    "min": 1,
                    "max": 100,
                    "step": 1
                }
            },
            "allowed_extensions": {
                "description": "允许的文件扩展名",
                "type": "text",
                "default": ".txt,.pdf,.doc,.docx,.zip,.rar,.jpg,.png,.gif,.mp4,.mp3",
                "hint": "用逗号分隔，如: .txt,.pdf,.jpg"
            },
            "max_preview_size": {
                "description": "最大预览文件大小(MB)",
                "type": "int",
                "default": 10
            },
            "text_preview_length": {
                "description": "文本文件预览长度",
                "type": "int",
                "slider": {
                    "min": 100,
                    "max": 4000,
                    "step": 100
                },
                "default": 1000
            },
            "enable_cache": {
                "description": "启用文件列表缓存",
                "type": "bool",
                "default": true
            },
            "cache_duration": {
                "description": "缓存有效期(秒)",
                "type": "int",
                "default": 300,
                "minimum": 60,
                "maximum": 3600
            },
            "max_download_size": {
                "description": "最大下载文件大小(MB)",
                "type": "int",
                "slider": {
                    "min": 1,
                    "max": 500,
                    "step": 1
                },
                "default": 50
            },
            "max_upload_size": {
                "description": "最大上传文件大小(MB)",
                "type": "int",
                "slider": {
                    "min": 1,
                    "max": 1000,
                    "step": 1
                },
                "default": 100
            },
            "require_user_auth": {
                "description": "要求用户认证",
                "type": "bool",
                "default": true,
                "hint": "启用后每个用户需要独立配置"
            },
            "autobackup_groups": {
                "description": "启用自动备份的群组",
                "type": "list",
                "default": [],
                "hint": "启用自动备份的群号列表。格式支持：'群号' 或 '群号:/路径'。未指定路径则默认为 /backup/group_{群号}"
            },
            "backup_allowed_extensions": {
                "description": "备份允许的文件扩展名",
                "type": "text",
                "default": "",
                "hint": "用逗号分隔，如: .txt,.pdf。留空表示不限制。"
            },
            "backup_max_size": {
                "description": "备份单个文件大小上限(MB)",
                "type": "int",
                "default": 0,
                "hint": "0 表示不限制。"
            }
        }
    }
} 
